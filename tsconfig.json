{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "noEmit": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
